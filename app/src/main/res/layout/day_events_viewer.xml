<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/day_events_viewer_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"/>

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:gravity="center_horizontal"
    android:layout_below="@+id/day_events_viewer_date_label"
    android:id="@+id/day_events_viewer_event_view_container">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/day_events_viewer_no_event_message"/>

    </LinearLayout>

    <Button
        android:id="@+id/day_events_viewer_show_more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show more"
        android:layout_below="@+id/day_events_viewer_event_view_container"
        android:layout_centerHorizontal="true"
        style="?android:attr/borderlessButtonStyle"/>

</merge>